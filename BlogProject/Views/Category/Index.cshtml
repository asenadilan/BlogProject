@{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Kategori Açıklama</th>
                <th scope="col">Kategori Durum</th>
                <th scope="col">Aksiyon</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var category in @ViewBag.categories)
            {
                <tr>
                    <th scope="row">@category.CategoryId</th>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryDescription</td>
                    @if (category.CategoryStatus)
                    {
                        <td>Aktif</td>
                    }
                    else
                    {
                        <td>Pasif</td>
                    }


                    <td><a href="/Category/Detail/@category.CategoryId" class="btn btn-primary read-m">Detay</a></td>

                </tr>
            }
        </tbody>
    </table>
}
